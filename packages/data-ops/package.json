{
    "name": "@repo/data-ops",
    "version": "1.0.1",
    "description": "Manage auth, database, schemas, and queries",
    "exports": {
        "./auth/*": {
            "types": "./dist/auth/*.d.ts",
            "default": "./dist/auth/*.js"
        },
        "./database/*": {
            "types": "./dist/database/*.d.ts",
            "default": "./dist/database/*.js"
        },
        "./zod-schema/*": {
            "types": "./dist/zod-schema/*.d.ts",
            "default": "./dist/zod-schema/*.js"
        },
        "./queries/*": {
            "types": "./dist/queries/*.d.ts",
            "default": "./dist/queries/*.js"
        },
        "./drizzle/*": {
            "types": "./dist/drizzle/*.d.ts",
            "default": "./dist/drizzle/*.js"
        }
    },
    "scripts": {
        "build": "tsc -p tsconfig.json --outDir ./dist && tsc-alias",
        "better-auth:generate": "mkdir -p src/drizzle && pnpx @better-auth/cli@latest generate --config ./config/auth.ts --output ./src/drizzle/auth-schema.ts",
        "drizzle:generate": "drizzle-kit generate --config drizzle.config.ts",
        "drizzle:migrate": "drizzle-kit migrate --config drizzle.config.ts",
        "drizzle:pull": "drizzle-kit pull --config drizzle.config.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "packageManager": "pnpm@10.14.0",
    "dependencies": {
        "@neondatabase/serverless": "^1.0.1",
        "@planetscale/database": "^1.19.0",
        "better-auth": "^1.3.7",
        "better-sqlite3": "^12.2.0",
        "drizzle-orm": "^0.44.5",
        "zod": "^4.1.0"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20250823.0",
        "@types/better-sqlite3": "^7.6.13",
        "better-sqlite#": "link:@types/better-sqlite#",
        "drizzle-kit": "^0.31.4",
        "mysql2": "^3.14.3",
        "postgres": "^3.4.7",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.9.2"
    }
}
